{
  "require": {
    "symfony/console": "^6.0.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.16.0",
    "phpstan/phpstan": "1.2.0",
    "phpstan/phpstan-phpunit": "1.0.0",
    "phpunit/phpunit": "9.5.10",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "3.6.1",
    "vimeo/psalm": "4.13.1"
  },
  "autoload": {
    "psr-4": {
      "Riimu\\AdventOfCode2021\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Riimu\\AdventOfCode2021\\": "tests/AdventOfCode2021/"
    }
  },
  "scripts": {
    "php-cs-fixer": "php-cs-fixer fix -v",
    "phpcs": "phpcs --standard=PSR12 -p src/ tests/",
    "phpstan": "phpstan analyse --level=9 src tests bin/console",
    "psalm": "psalm",
    "test": "phpunit"
  }
}
